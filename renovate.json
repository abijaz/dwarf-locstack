{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base",
    ":dependencyDashboard"
  ],
  "enabledManagers": ["opam", "github-actions"],
  "opam": {
    "enabled": true,
    "fileMatch": ["(^|/)dune-project$", "\\.opam$"]
  },
  "customManagers": [
    {
      "customType": "regex",
      "fileMatch": ["dune-project", "^.*\\.opam$"],
      "matchStrings": [
        "\"(?<depName>[\\w-]+)\"\\s+\\{[>= ]+\"(?<currentValue>[\\w\\.]+)\"\\}"
      ],
      "datasourceTemplate": "opam"
    }
  ]
}
